{
  "private": true,
  "name": "ksorv.com",
  "description": "Repo which lives at its name",
  "version": "0.0.1",
  "author": {
    "name": "Saurav Khdoolia",
    "email": "me@ksorv.com",
    "url": "https://ksorv.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ksorv/blog.git"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "remix build",
    "dev:remix": "remix watch",
    "postinstall": "remix setup node",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "dev:tailwind": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "serve": "remix-serve build",
    "start": "concurrently --names 'TAILWIND,REMIX,NETLIFY' -c 'cyan.bold,blue.bold,yellow.bold' 'npm run dev:tailwind' 'npm run dev:remix' 'npm run dev:netlify'"
  },
  "dependencies": {
    "@netlify/functions": "^0.7.2",
    "@remix-run/netlify": "^1.0.6",
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "tailwindcss": "^3.0.6",
    "tslib": "^2.3.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
